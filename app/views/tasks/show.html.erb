<div class="lists">
<h1>My Tasks</h1>
<h2><%=@task.title%></h2>
<p><%=@task.details%></p>
<p><%=@task.completed?%></p>
</div>
<div class="lists">
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
            </div>